{
  "name": "edge-electron",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/edge-electron/src",
  "root": "apps/edge-electron",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p apps/edge-electron/tsconfig.json && mkdir -p dist/apps/edge-electron && cp apps/edge-electron/package.json dist/apps/edge-electron/package.json",
        "outputs": ["{workspaceRoot}/dist/apps/edge-electron"]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "electron dist/apps/edge-electron/main.js",
        "dependsOn": ["build"]
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "electron-builder --config apps/edge-electron/electron-builder.json",
        "dependsOn": ["build", "my-app:build"]
      }
    }
  }
}
